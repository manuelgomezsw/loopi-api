{
	"info": {
		"name": "Loopi API - Authentication",
		"description": "Endpoints de autenticaci√≥n para la API Loopi",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		},
		{
			"key": "franchiseId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "storeId",
			"value": "1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    pm.collectionVariables.set('token', response.token);",
							"    console.log('Token guardado: ' + response.token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"password123\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/auth/login",
					"host": ["{{baseUrl}}"],
					"path": ["auth", "login"]
				}
			}
		},
		{
			"name": "Select Context",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"franchise_id\": {{franchiseId}},\n    \"store_id\": {{storeId}}\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/auth/context",
					"host": ["{{baseUrl}}"],
					"path": ["auth", "context"]
				}
			}
		}
	]
}
