{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "env": {
                "PORT": "8080",
                "GO_ENV": "development"
            },
            "args": [],
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc",
            "preLaunchTask": "Kill Server Processes (Silent)"
        },
        {
            "name": "Launch Server (Custom Port)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "env": {
                "PORT": "3000",
                "GO_ENV": "development"
            },
            "args": [],
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc"
        },
        {
            "name": "Launch Server with .env",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "GO_ENV": "development"
            },
            "args": [],
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc",
            "preLaunchTask": "Kill Server Processes (Silent)"
        },
        {
            "name": "Test Package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "env": {
                "GO_ENV": "test"
            },
            "args": [
                "-test.v"
            ],
            "showLog": true
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "env": {
                "GO_ENV": "test"
            },
            "args": [
                "-test.v"
            ],
            "showLog": true
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0,
            "showLog": true
        },
        {
            "name": "Connect to Remote Delve",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true
        }
    ]
}